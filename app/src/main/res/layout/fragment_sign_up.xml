<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.login.viewmodel.MainViewModel" />

        <variable
            name="viewModel"
            type="MainViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragment.FragmentSignUp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_tron"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tron_1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="1dp" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="73dp"
                android:src="@drawable/tron_2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="104dp"
                android:layout_height="98dp"
                android:src="@drawable/tron_3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:text="Sign Up"
                android:textColor="#000000"
                android:textSize="50sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="106dp"
                android:layout_height="16dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="20dp"
                android:text="Full name"
                android:textColor="#9796A1"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtFullName"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/bg_radius"
                android:drawablePadding="10dp"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:paddingStart="22dp"
                android:text=""
                android:textSize="18sp" />

            <TextView
                android:layout_width="106dp"
                android:layout_height="16dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="20dp"
                android:text="E-mail"
                android:textColor="#9796A1"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/bg_radius"
                android:drawablePadding="10dp"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:paddingStart="22dp"
                android:text=""
                android:textSize="18sp" />

            <TextView
                android:layout_width="106dp"
                android:layout_height="16dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="20dp"
                android:text="Password"
                android:textColor="#9796A1"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtPassWord"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/bg_radius"
                android:drawablePadding="10dp"
                android:inputType="textPassword"
                android:padding="10dp"
                android:paddingStart="22dp"
                android:text=""
                android:textSize="18sp" />

            <TextView
                android:id="@+id/login"
                android:layout_width="248dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="80dp"
                android:background="@drawable/bg_login"
                android:gravity="center"
                android:padding="10dp"
                android:text="SIGN UP"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account?"
                    android:textColor="#5B5B5E" />

                <TextView
                    android:id="@+id/txtLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=" Login"
                    android:textColor="#FE724C" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:text="Sign up with"
                android:textColor="#5B5B5E" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/imageFacebook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/facebook_su" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="FACEBOOK"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/imageGooLe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:src="@drawable/google_su" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="GOOGLE"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>